<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PlaylistDetailsActivity">
    <RelativeLayout
    android:padding="10dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/container2">

    </androidx.recyclerview.widget.RecyclerView>



        <!-- Bewertung hinzufÃ¼gen  -->
        <TextView
            android:layout_marginTop="40dp"
            android:gravity="center"
            android:id="@+id/bewertung"
            android:layout_width="match_parent"
            android:layout_below="@id/container2"
            android:layout_height="wrap_content"
            android:text="Bewertung">

        </TextView>

        <androidx.cardview.widget.CardView
android:id="@+id/card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/bewertung"
            android:layout_marginTop="20dp"
            android:padding="10dp">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/kommentarText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:hint="Kommentar">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:gravity="center"
                    android:text="cc">

                </com.google.android.material.textfield.TextInputEditText>
            </com.google.android.material.textfield.TextInputLayout>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:layout_below="@id/card"
            android:gravity="center">

            <com.google.android.material.slider.Slider
                android:id="@+id/sterneslide"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:stepSize="1"
                android:valueFrom="0"
                android:valueTo="5" />
        </LinearLayout>
        <!-- Bewertung Ende -->

        <androidx.recyclerview.widget.RecyclerView
            android:layout_marginTop="50dp"
            android:layout_below="@id/card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/containerRating">

        </androidx.recyclerview.widget.RecyclerView>
    </RelativeLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>